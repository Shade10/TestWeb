@model WebTest.Models.GuestResponse

@{
    ViewBag.Title = "Create";
}

    <style>
        body {
            background-color: #F1F1F1;
        }
    </style>

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>RSVP</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <p>Imię i Nazwisko: @Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) </p>
            </div>
            <div class="form-group">
                <p>Twój e-mail: @Html.TextBoxFor(x => x.Email, new { @class = "form-control" }) @Html.ValidationMessageFor(x => x.Email)</p>
            </div>
            <div class="form-group">
                <p>Twój telefon: @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })</p>
            </div>
            <div class="form-group">
                <label>Czy Przyjdziesz na przyjęcie?</label>
                @Html.DropDownListFor(x => x.WillAttend, new[]
                         {
                        new SelectListItem() {Text = "Tak przyjdę.", Value=bool.TrueString},
                        new SelectListItem() {Text = "Nie, nie przyjdę.", Value=bool.FalseString}
                    }, "Wybierz opcję", new { @class = "form-control" })
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Wyślij zawiadomienie" />
            </div>
        }
    </div>
</div>
